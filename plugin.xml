<?xml version='1.0' encoding='UTF-8'?>
<plugin id="cordova-plugin-android-camera-permissions" version="1.0.4" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>Storage Permissions</name>
    <author></author>
    <description>Cordova plugin to add the android screenshot permissions.</description>
    <keywords>cordova storage permissions</keywords>
    <license>MIT</license>
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
    <platform name="android">
      <config-file target="AndroidManifest.xml" parent="/manifest">
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-feature android:name="android.hardware.storage" android:required="true" />
      </config-file>
    </platform>
</plugin>
